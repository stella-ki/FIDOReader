<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fagment.ReaderButtonFragment">

    <TextView
        android:id="@+id/readerActivationText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/readerActivationText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/readerActivationText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello" />

    <Button
        android:id="@+id/readerActivationBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button" />

    <Button
        android:id="@+id/KonaBIOPASSGetInfoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GetInfo" />

    <TableLayout
        android:id="@+id/KonaBIOPASSGetInfoTable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    </TableLayout>

    <Button
        android:id="@+id/KonaBIOPASSPINBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ClientPIN"/>

</LinearLayout>