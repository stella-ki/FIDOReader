<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".fagment.ReaderButtonFragment">

    <TextView
        android:id="@+id/newPINView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New PIN" />

    <EditText
        android:id="@+id/newPINEditText"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/confrimPINView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm PIN" />

    <EditText
        android:id="@+id/confrimPINEditText"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/resultSetView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>