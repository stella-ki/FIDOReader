<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.challenge.fidoreader">

    <uses-permission android:name="android.permission.NFC"/>
    <uses-feature android:name="android.hardware.nfc" android:required="true" />

    <application
        android:theme="@android:style/Theme.Holo.Light"
        android:icon="@drawable/ic_main_icon"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name="com.challenge.fidoreader.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data android:name="android.nfc.action.TAG_DISCOVERED" android:resource="@xml/nfc_tech_filter" />

        </activity>

        <activity
            android:name="com.challenge.fidoreader.ApduSenderContactLess">
             </activity>
    </application>

</manifest>